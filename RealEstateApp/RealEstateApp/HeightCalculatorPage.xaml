<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealEstateApp.HeightCalculatorPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding CurrentPressure, StringFormat='Current presure: {0}'}"/>
            <Label Text="{Binding CurrentAltitude, StringFormat='Current altitude {0:N2} m'}" HorizontalOptions="Center" FontSize="Title"/>
            <Entry Text="{Binding BarometerMeasurement.Label}" Placeholder="Measurement Label"/>
            <Button Text="SAVE" Clicked="SaveMeasurement_Clicked"/>
            <ListView ItemsSource="{Binding Measurements}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="{Binding Display}"/>
                                    <Label Text="{Binding HeightChange, StringFormat='{0:N2}m'}"/>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>